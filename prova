import java.util.Scanner;

public class Aleix_Cadenes8 {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);
        //Demanem un n√∫mero binari
        System.out.println("Escriu un numero en binari: ");
        String numBin = scan.nextLine();
        //Mostrem el resultat
        System.out.println("El numero binari " + numBin + " en format decimal es " + Integer.parseInt(numBin,2));
    }
}
